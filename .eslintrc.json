{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "standard"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "semi": [
      "2",
      "never"
    ],
    "no-extra-semi": "off",
    "indent": [
      "error",
      2
    ],
    "space-before-function-paren": "off",
    "no-use-before-define": "off",
    "@typescript-eslint/no-use-before-define": "warn"
  }
}